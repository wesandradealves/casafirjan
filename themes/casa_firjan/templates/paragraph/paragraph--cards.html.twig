{% set field_link = content.field_link %}

{% set field_titulo = content.field_titulo|render|striptags|trim %}

{% set field_texto = content.field_texto|render|striptags|trim %}

{% set field_imagem = content.field_imagem ? file_url(content.field_imagem['#items'].entity.uri.value) : '' %}

<div class="col-12 col-md-6 col-lg-4 ps-2 pe-2 mb-4 paragraph--cards">
    <div class="card-inner">
        <div class="thumbnail" style="background-image: url({{field_imagem}})"></div>
        <h3 class="title mt-3 mb-3">{{field_titulo}}</h3>
        <p class="text mb-3">{{field_texto}}</p>
        {{field_link}}
    </div>
</div>
