function gm5_interface_node_insert($node){
  if($node->bundle() == 'curso'){
    updateCurso($node);
    $node->save();
  }
}


function gm5_interface_entity_presave(Drupal\Core\Entity\EntityInterface $entity){
  if($entity->bundle() == 'curso' && $entity->id() != NULL){
    updateCurso($entity);
  }
}

